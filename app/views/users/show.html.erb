<div class="well bs-component">
  <div class="list-group" id="user-profile">
    <div class="list-group-item">
        <div class="row-picture">
          <div class="profile-photo">
            <img class="circle" src="https://pbs.twimg.com/profile_images/485866025884188673/mm_ifWVp.jpeg" alt="icon">
          </div>
        </div>
          <div class="row-content">
            <h2><%= @user.name %></h2>
            <h4><%= @user.email %></h4>
             <%= link_to 'Edit Profile', edit_user_path, class: 'btn btn-info button-right' %>
          </div>
    </div>
  </div>
  <table class="table table-hover">
      <thead>
        <th class="col-md-1"></th>
        <th class="col-md-9"></th>
        <th class="col-md-2"></th>
      </thead>
      <tbody>
        <% @upvotedPosts.each do |post| %>
            <tr data-link="<%= post_path(post) %>">
                <td>
                  <%= link_to like_post_path(post), method: :put, class: "btn btn-warning mdi-navigation-arrow-drop-up" do %>
                  <p><%= post.get_upvotes.size %></p>
                  <% end %>
                </td>
                <td>
                  <div class="post-item-info">
                    <h4 class="list-group-item-heading"><a href="<%= post.url %>" target="_blank"><%= post.name %></a></h4>
                    <p class="list-group-item-text"><%= post.description %></p>
                  </div>
                </td>
                <td>
                </td>
            </tr>
        <% end %>
      </tbody>
  </table>
</div>
