<div class="well bs-component">
  <div class="list-group" id="user-profile">
    <div class="list-group-item">
        <div class="row-picture">
<!--      TODO: Replace default image with a placeholder avatar -->
          <div class="profile-photo">
            <% if @user.photo %>
              <%= image_tag @user.photo.to_s, class: "circle" %>
            <% end %>
          </div>
        </div>
          <div class="row-content">
            <h2><%= @user.name %></h2>
            <h4><%= @user.email %></h4>
             <%= link_to 'Edit Profile', edit_user_path, class: 'btn btn-info button-right' %>
          </div>
    </div>
  </div>

<div role="tabpanel">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">Home is the active tab</div>
    <div role="tabpanel" class="tab-pane" id="profile">Profile is the active tab</div>
    <div role="tabpanel" class="tab-pane" id="messages">Messages is the active tab</div>
    <div role="tabpanel" class="tab-pane" id="settings">Settings is the active tab</div>
  </div>

</div>

  <table class="table table-hover">
      <thead>
        <th class="col-md-1"></th>
        <th class="col-md-9"></th>
        <th class="col-md-2"></th>
      </thead>
      <tbody>
        <% @upvotedPosts.each do |post| %>
            <tr data-link="<%= post_path(post) %>">
                <td>
                  <%= link_to like_post_path(post), method: :put, class: "btn btn-warning btn-raised mdi-navigation-arrow-drop-up" do %>
                  <p><%= post.get_upvotes.size %></p>
                  <% end %>
                </td>
                <td>
                  <div class="post-item-info">
                    <h4 class="list-group-item-heading"><a href="<%= post.url %>" target="_blank"><%= post.name %></a></h4>
                    <p class="list-group-item-text"><%= post.description %></p>
                  </div>
                </td>
                <td>
                </td>
            </tr>
        <% end %>
      </tbody>
  </table>

  <!-- Hidden Bootstrap Modal Markup -->
  <div class="modal fade" id="new-post-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Create new post</h4>
        </div>
        <div class="modal-body">
          <!-- Render the new post form form (passing modal: true to enable remote: true) -->
          <%= render 'posts/form', modal: true %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
