<div class='navbar navbar-default navbar-fixed-top'>
    <div class='theme-status'>
    </div>
  <div class='container' id='brand-container'>
    <div class='navbar-header'>
      <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-responsive-collapse'>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>
      <%= link_to 'Home', root_path, class: 'navbar-brand' %>
    </div>
    <div class='navbar-collapse collapse navbar-responsive-collapse'>
      <ul class='nav navbar-nav navbar-right' id='menu-right'>
        <li>
          <%= link_to search_form_path, remote: true, id: 'search' do %>
            <i class='mdi-action-search'></i>
          <% end %>
        </li>
        <li id='search-bar'></li>
        <% if logged_in? %>
          <li><%= link_to 'Profile', current_user %></li>
          <li><%= link_to 'Log out', logout_path %></li>
        <% else %>
          <li><%= link_to 'Sign in with Twitter', "/auth/twitter" %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="container" id="fab-container">
    <%= link_to '', '#', data: { toggle: 'modal', target: '#new-post-modal' }, class: "btn btn-warning btn-fab btn-raised mdi-content-add", id: "add-post" %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    var scroll_pos = 0;
    $(document).scroll(function() {
        scroll_pos = $(this).scrollTop();
        console.log('scroll_pos: ', scroll_pos)
        if(scroll_pos > 45) {
          $("#fab-container, .navbar, .navbar-brand, .navbar-right, .navbar-left, .btn-fab").addClass('pastNavbarBottom');
        } else {
          $("#fab-container, .navbar, .navbar-brand, .navbar-right, .navbar-left, .btn-fab").removeClass('pastNavbarBottom');
        }
    });
  });
</script>
