<div class="list-group-item">
  <div class="row-picture">
    <img class="user-photo" src="https://pbs.twimg.com/profile_images/485866025884188673/mm_ifWVp.jpeg" alt="icon">
  </div>
  <div class="row-content">
    <h4 class="list-group-item-heading">
      <strong>
        <%= link_to comment.commenter_name, user_path(comment.user) %>
      </strong>
    </h4>
    <h4 class="list-group-item-text">
      <%= comment.content %>
    </h4>
    <%= link_to "Reply", comments_new_path(parent_id: comment.id, commentable: @post), remote: true, id: 'reply-link' %>
  </div>
</div>
<div class="list-group-separator"></div>