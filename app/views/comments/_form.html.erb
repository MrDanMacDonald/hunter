<div class="form-horizontal" id="comment-form">
  <fieldset>
    <%= form_for [@commentable, @comment], remote: true do |f| %>
      <% if @parent %>
        <%= hidden_field_tag :parent_id, @parent.id %>
      <% end %>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.text_area :content, rows: "3", class: "form-control floating-label", placeholder: "What do you think?" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Submit", class: "btn btn-primary btn-raised right" %>
        </div>
      </div>
    <% end %>
  </fieldset>
</div>
