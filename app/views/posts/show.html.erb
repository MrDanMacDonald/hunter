<div class="well bs-component">
  <!-- Post info -->
  <div class="row">
    <div class="col-md-1">
      <%= link_to like_post_path(@post), method: :put, class: "btn btn-warning mdi-navigation-arrow-drop-up", id: "large-button" do %>
      <p><%= @post.get_upvotes.size %></p>
      <% end %>
    </div>
    <div class="col-md-11">
      <span id="post-name">
        <h2><%= @post.name %></h2>
      </span>
      <h3><%= @post.description %></h3>
      <h4><a href="<%= @post.url %>" target="_blank"><%= @post.url %></a></h4>
    </div>
  </div>
  <hr>

  <!-- User info -->
  <div class="row">
    <div class="col-md-4">
      <div class="user-photo-container">
        <img class="user-photo" src="https://pbs.twimg.com/profile_images/485866025884188673/mm_ifWVp.jpeg" alt="icon">
      </div>
      <div class="user-info-container">
        <span>Posted <%= time_ago_in_words(@post.created_at) %> ago by </span>
        <%= link_to @post.name_of_user, user_path(@post.user) %>
      </div>
    </div>
    <div class="col-md-5">
      <div class="number-of-upvotes">
        <span><%= @post.get_upvotes.size %> Upvotes</span>
      </div>
    </div>
    <div class="col-md-1">
      <div class="social-share-button">
        <%= facebook_button %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="social-share-button">
        <%= twitter_button %>
      </div> 
    </div>
  </div>
  <hr>

<!--   Comments -->
  <h2><%= pluralize(@comments.count, "Comment")%></h2>
  <div class="list-group">
    <% @comments.each do |comment| %>
      <div class="list-group-item">
        <div class="row-picture">
          <img class="user-photo" src="https://pbs.twimg.com/profile_images/485866025884188673/mm_ifWVp.jpeg" alt="icon">
        </div>
        <div class="row-content">
          <h4 class="list-group-item-heading">
            <strong>
              <%= link_to comment.commenter_name, user_path(comment.user) %>
            </strong>
          </h4>
          <h4 class="list-group-item-text">
            <%= comment.content %>
          </h4>
        </div>
      </div>
      <div class="list-group-separator"></div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= render 'comments/form', locals: { comment: @comment, commentable: @commentable } %>
    </div>
  </div>
</div>