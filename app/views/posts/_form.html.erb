<div class="form-horizontal">
    <fieldset>
      <%= form_for(@post) do |f| %>
          <div class="form-group">
              <%= f.label :url, class: "col-lg-2 control-label" %>
              <div class="col-lg-10">
                  <%= f.text_field :url, class: "form-control", placeholder: "Resource URL" %>
              </div>
          </div>
          <div class="form-group">
              <%= f.label :name, class: "col-lg-2 control-label" %>
              <div class="col-lg-10">
                  <%= f.text_field :name, class: "form-control", placeholder: "Resource Name" %>
              </div>
          </div>
          <div class="form-group">
            <%= f.label :description, class: "col-lg-2 control-label" %>
            <div class="col-lg-10">
              <%= f.text_field :description, class: "form-control", placeholder: "Tagline" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit "Share it", class: "btn btn-primary" %>
            </div>
          </div>
      <% end %>
    </fieldset>
</div>
