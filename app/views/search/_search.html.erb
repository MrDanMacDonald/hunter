<div class="form-horizontal">
  <fieldset>
    <%= form_for search_form_path, method: :get do |f| %>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.text_field :q, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Go", class: "btn btn-primary btn-raised right" %>
        </div>
      </div>
    <% end %>
  </fieldset>
</div>
